{
  "$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": ["**"]
          }
        }
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "nursery": {
        "useExplicitType": "off"
      },
      "correctness": {
        "noPrivateImports": "off",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off",
        "noUndeclaredVariables": "off",
        "noUnusedImports": { "level": "warn", "fix": "safe", "options": {} }
      },
      "style": {
        "noImplicitBoolean": "off",
        "useDefaultSwitchClause": "off",
        "useNamingConvention": "off",
        "useComponentExportOnlyModules": "off",
        "noEnum": "off",
        "useConsistentMemberAccessibility": "off",
        "useConsistentCurlyBraces": "off",
        "noProcessEnv": "off",
        "noUselessElse": "on"
      },
      "suspicious": {
        "noConsole": {
          "level": "off",
          "options": {
            "allow": ["debug", "info", "warn", "error"]
          }
        },
        "noReactSpecificProps": "off",
        "noEmptyBlockStatements": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off",
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 25
          }
        }
      },
      "security": {
        "noSecrets": "off"
      }
    }
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses": "always",
      "bracketSameLine": false
    },
    "linter": {
      "enabled": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": ["**/api/**", "**/action/**"],
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          }
        }
      }
    }
  ],
  "files": {
    "includes": ["**", "!**/.bruno", "!**/app/dist"]
  }
}
